
@{
    ViewBag.Title = "bookMaster";
}

<h3>主管預約健檢作業</h3>
<div class="row shop-tracking-status">

    <div class="col-md-12">
        <div class="well">
            <div class="order-status">
                <div class="order-status-timeline">
                    <!-- class names: c0 c1 c2 c3 and c4 -->
                    <div class="order-status-timeline-completion c3"></div>
                </div>
                <div class="image-order-status image-order-status-new active img-circle">
                    <span class="status">收集資料</span>
                    <div class="icon"></div>
                </div>
                <div class="image-order-status image-order-status-active active img-circle">
                    <span class="status">填寫資料</span>
                    <div class="icon"></div>
                </div>

                <div class="image-order-status image-order-status-delivered active img-circle">
                    <span class="status">確認資料</span>
                    <div class="icon"></div>
                </div>
                <div class="image-order-status image-order-status-completed active img-circle">
                    <span class="status">送出資料</span>
                    <div class="icon"></div>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">條件查詢</h3>
        </div>
        <div class="panel-body">
            <div class="form-group row">
                <div class="col-xs-4">
                    <label for="ex6">年度</label>
                    <select class="form-control" id="ex6">
                        <option>2015</option>
                        <option>2016</option>
                    </select>
                </div>
                <div class="col-xs-4">
                    <label for="ex1">預約日期迄時</label>
                    <input class="form-control" id="ex1" type="date">
                </div>
                <div class="col-xs-4">
                    <label for="ex1">預約日期結束</label>
                    <input class="form-control" id="ex1" type="date">
                </div>
                <div class="col-xs-4">
                    <label for="ex6">處理狀態</label>
                    <select class="form-control" id="ex6">
                        <option>自取</option>
                        <option>廠內窗口寄送</option>
                        <option>寄送</option>
                    </select>
                </div>
                <div class="col-xs-4">
                    <label for="ex1">廠別</label>
                    <input class="form-control" id="ex1" type="text">
                </div>

                <div class="col-xs-4">
                    <label for="ex2">姓名</label>
                    <input class="form-control" id="ex2" type="text">
                </div>
                <div class="col-xs-4">
                    <label for="ex3">工號</label>
                    <input class="form-control" id="ex3" type="text">
                </div>
                <div class="col-xs-4">
                    <label for="ex6">停用註記</label>
                    <select class="form-control" id="ex6">
                        <option>Y</option>
                        <option>N</option>
                    </select>
                </div>
            </div>
            <input type="submit" class="btn btn-success  pull-right" value="送出查詢">
        </div>
    </div>
   
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">查詢結果</h3>
    </div>
    <div class="panel-body">
        <table class="table" style="overflow: auto;
	                                        height: 300px;
	                                        display: block;">
            <tr><th>預約單號</th><th>年度</th><th>姓名</th><th>預約日期</th><th>醫院名稱</th><th>預約狀況</th><th>停用註記</th></tr>
